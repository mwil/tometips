{{! FIXME: type header and description }}
{{#each this}}
<h2><a class="anchor" id="talents/{{type}}"></a>{{toTitleCase name}}</h2>
<div>
    <p>{{description}}</p>
    <p id="talents/{{type}}-avail"></p>
    <div>
        {{#each talents}}
            <div class="card">
                <div class="card-header clickable">
                    <h3 class="card-title mb-0">
                        <button class="btn btn-link text-decoration-none p-0 w-100 text-start" type="button" 
                                id="talents/{{../type}}/{{toHtmlId id}}" 
                                data-bs-toggle="collapse" 
                                data-bs-target="#collapse-{{toHtmlId id}}"
                                aria-expanded="false" 
                                aria-controls="collapse-{{toHtmlId id}}">
                            {{> talent_img}}{{name}}
                        </button>
                    </h3>
                </div>
                <div id="collapse-{{toHtmlId id}}" class="talent-details collapse" data-bs-parent="">
                    <div class="card-body">
                        {{> talent_details}}
                        {{#if source_code}}{{#unless (isDLC source_code)}}<div class="source-link"><a href="{{tome_git_url}}/blob/{{tag}}/game/modules/tome/{{source_code.[0]}}#L{{source_code.[1]}}" target="_blank">View source</a></div>{{/unless}}{{/if}}
                        </div>
                    </div>
                </div>
            {{/each}}
    </div>
</div>
{{/each}}
